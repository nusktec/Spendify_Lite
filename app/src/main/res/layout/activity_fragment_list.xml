<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Data started-->
    <data>

    </data>

    <!--Main layout begin-->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_color_1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/app_color_1"
            android:orientation="vertical"
            tools:context=".activities.Dashboard">

            <!--Formulate the header coat-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="5dp"
                android:elevation="0dp"
                android:paddingHorizontal="5dp">

                <EditText
                    android:id="@+id/txt_search"
                    style="@style/EditText.GreySoft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_simple_edittext"
                    android:hint="Search..."
                    android:inputType="text"
                    android:layout_centerInParent="true"
                    android:layout_toStartOf="@id/toolbar_leftBtn"
                    android:textColor="@color/grey_500"
                    android:layout_marginRight="10dp"
                    android:textColorHint="@color/grey_700" />

                <ImageButton
                    android:id="@+id/toolbar_leftBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:cropToPadding="true"
                    android:src="@drawable/ic_search"
                    android:tint="@color/grey_500" />

            </RelativeLayout>

            <!--Divider line-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/app_color_1_1_0"
                android:elevation="1dp" />

            <!--main body-->

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>