<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Data started-->
    <data>

    </data>

    <!--Main layout begin-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/app_color_1"
        android:orientation="vertical"
        tools:context=".activities.Dashboard">

        <!--Sub-mail container-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="vertical">
            <!--Main content-->

            <androidx.viewpager.widget.ViewPager
                android:id="@+id/mainViewPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>
        <!--Divider line-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/app_color_1_1_0"
            android:elevation="1dp" />
        <!--footer view-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:clipChildren="false"
            android:elevation="2dp"
            android:paddingHorizontal="15dp">
            <!--Footer content-->

            <ImageButton
                android:id="@+id/btn_dash_home"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:cropToPadding="true"
                android:src="@drawable/ic_timeline"
                android:tint="@color/grey_500" />

            <ImageButton
                android:id="@+id/btn_dash_add"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:background="@drawable/shape_round_solid"
                android:cropToPadding="true"
                android:src="@drawable/ic_add"
                android:elevation="5dp"
                android:tint="@color/app_color_1" />

            <ImageButton
                android:id="@+id/btn_dash_list"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:cropToPadding="true"
                android:src="@drawable/ic_format_list_bulleted"
                android:tint="@color/grey_500" />

        </RelativeLayout>
    </LinearLayout>
</layout>