<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <!--Data started-->
    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.Dashboard">

        <!--Children-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Spendify Locked"
                android:textAllCaps="false"
                android:textColor="@color/grey_500"
                android:textSize="25sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginBottom="10dp"
                app:lottie_autoPlay="true"
                app:lottie_colorFilter="@color/app_color_2"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/lottie_locked" />

            <EditText
                android:id="@+id/txt_pincode"
                style="@style/EditText.GreySoft"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_simple_edittext"
                android:hint="Pin Code"
                android:imeOptions="actionGo"
                android:inputType="textPassword|number"
                android:maxLength="8"
                android:textAlignment="center"
                android:textColor="@color/grey_500"
                android:textColorHint="@color/grey_700"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btn_save_setting"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/btn_primary"
                android:text="Unlock"
                android:textColor="@color/light_white"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Forgot Pin Code"
                android:textAlignment="center"
                android:textColor="@color/red_800" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="10dp"
            android:text="R01 Encrypt"
            android:textAlignment="center" />

    </RelativeLayout>

</layout>