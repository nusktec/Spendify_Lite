<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!--Data started-->
    <data>

        <variable
            name="sms_state"
            type="boolean" />
    </data>

    <!--Main layout begin-->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".activities.Dashboard">

            <!--Formulate the header coat-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="5dp"
                android:elevation="0dp"
                android:paddingHorizontal="5dp">

                <ImageButton
                    android:id="@+id/toolbar_leftBtn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerInParent="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:cropToPadding="true"
                    android:elevation="2dp"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@color/grey_500" />

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="@string/toolbar_title"
                    android:textAllCaps="false"
                    android:textColor="@color/grey_500"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <!--Main contents-->
            <LinearLayout
                android:id="@+id/profile_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginVertical="20dp"
                android:elevation="0dp"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Profile Settings"
                    android:textColor="@color/app_color_1Dp"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--Children-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Names"
                        android:textColor="@color/grey_400"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/txt_name"
                        style="@style/EditText.GreySoft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_simple_edittext"
                        android:hint="Your full names"
                        android:inputType="textCapSentences"
                        android:textColor="@color/grey_500"
                        android:textColorHint="@color/grey_700" />

                </LinearLayout>

                <!--Email control-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/grey_400"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/txt_email"
                        style="@style/EditText.GreySoft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_simple_edittext"
                        android:hint="Email address"
                        android:inputType="textEmailAddress"
                        android:textColor="@color/grey_500"
                        android:textColorHint="@color/grey_700" />

                </LinearLayout>

                <!--Phone control-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Phone"
                        android:textColor="@color/grey_400"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/txt_phone"
                        style="@style/EditText.GreySoft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_simple_edittext"
                        android:hint="Phone number"
                        android:inputType="phone"
                        android:textColor="@color/grey_500"
                        android:textColorHint="@color/grey_700" />

                </LinearLayout>

                <!--Country control-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <TextView
                        android:id="@+id/txt_default_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose country currency"
                        android:textColor="@color/grey_500"
                        android:textSize="13sp" />

                    <Spinner
                        android:id="@+id/spinner_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <!--Gender control-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textColor="@color/grey_400"
                        android:textSize="12sp" />

                    <RadioGroup
                        android:id="@+id/radio_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radio_male"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:text="Male"
                            android:textColor="@color/grey_500" />

                        <RadioButton
                            android:id="@+id/radio_female"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Female"
                            android:textColor="@color/grey_500" />
                    </RadioGroup>

                </LinearLayout>

                <!--Quotes-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:paddingTop="10dp">


                    <EditText
                        android:id="@+id/txt_quote"
                        style="@style/EditText.GreySoft"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/bg_simple_edittext"
                        android:hint="Your quotes..."
                        android:inputType="textMultiLine"
                        android:lines="3"
                        android:singleLine="false"
                        android:textColor="@color/grey_500"
                        android:textColorHint="@color/grey_700"
                        android:textStyle="italic" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="System Settings"
                    android:textColor="@color/grey_400"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--Notifications control-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <Switch
                        android:id="@+id/switch_noti"
                        style="SCBSwitch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Allow Notifications" />


                </LinearLayout>

                <!--Auto read SMS control-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@{sms_state?`Recommended`:`Not recommended`, default=`Thinking`}"
                        android:textColor="@color/red_500"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <Switch
                        android:id="@+id/switch_sms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:text="Allow SMS Sync." />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="App Security"
                    android:textColor="@color/grey_400"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!--Notifications control-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:paddingTop="10dp">

                    <Switch
                        android:id="@+id/switch_protect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Spendify Protecs" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Sync. Backup"
                    android:textColor="@color/grey_400"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:visibility="gone" />

                <!--Notifications control-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical"
                    android:paddingTop="10dp"
                    android:visibility="gone">

                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enable Cloud Backup" />

                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Allow Cross Content" />

                </LinearLayout>


            </LinearLayout>

            <Button
                android:id="@+id/btn_save_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn_primary"
                android:text="Update Profile"
                android:textColor="@color/light_white"
                android:textStyle="bold" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</layout>